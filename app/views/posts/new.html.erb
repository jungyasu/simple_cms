<h1>New Post</h1>

<%= form_for @post do |f| %>
	<table summary="Post form fields">
		<tr>
			<th><%= f.label(:title, "Title") %></th>
			<td><%= f.text_field(:title) %></td>
		</tr>
		<tr>
			<th><%= f.label(:body) %></th>
			<td><%= f.text_area(:body) %></td>
		</tr>
		<tr>
			<th><%= f.label(:category_id) %></th>
			<td><%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"} %></td>
		</tr>
	</table>
	<p><%= submit_tag("Create Post") %></p>
<% end %>
<%= link_to "Back to Posts", posts_path %>